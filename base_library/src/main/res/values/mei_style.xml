<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MeiEmptyText">
        <item name="android:drawablePadding">@dimen/mei_16_dp</item>
        <item name="android:drawableTop">?attr/meiIconEmpty</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:paddingBottom">@dimen/mei_16_dp</item>
        <item name="android:paddingTop">@dimen/mei_16_dp</item>
        <item name="android:text">?attr/meiTextEmpty</item>
        <item name="android:textColor">?attr/meiColorTextGray</item>
    </style>

    <style name="MeiLoadingText">
        <item name="android:paddingTop">@dimen/mei_16_dp</item>
        <item name="android:text">?attr/meiTextLoading</item>
        <item name="android:textColor">?attr/meiColorTextGray</item>
    </style>

    <style name="MeiErrorText">
        <item name="android:drawablePadding">@dimen/mei_16_dp</item>
        <item name="android:drawableTop">?attr/meiIconError</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:paddingBottom">@dimen/mei_16_dp</item>
        <item name="android:paddingTop">@dimen/mei_16_dp</item>
        <item name="android:text">?attr/meiTextError</item>
        <item name="android:textColor">?attr/meiColorTextGray</item>
    </style>

    <style name="MeiBaseDialog" parent="@android:style/Theme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:colorBackground">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimAmount">0.4</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="MeiToolbarTitleWhite">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

</resources>