<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/refresh_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerInside"
        android:src="@drawable/mei_dingdang_refresh_loading_list" />

    <TextView
        android:id="@+id/refresh_text"
        android:layout_width="@dimen/mei_100_dp"
        android:layout_height="match_parent"
        android:gravity="center_vertical|left"
        android:text="@string/mei_pull_refresh"
        android:textColor="?meiColorTextGray"
        android:textSize="@dimen/mei_14_sp" />

</LinearLayout>